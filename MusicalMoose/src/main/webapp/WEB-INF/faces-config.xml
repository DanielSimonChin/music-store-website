
<faces-config version="2.3"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">
    <application>

        <resource-bundle>
            <base-name>com.gb4w21.musicalmoose.bundles.messages</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>

   
    
    
    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>detailTrack</from-outcome>
            <to-view-id>trackpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>searchPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>searchTrack</from-outcome>
            <to-view-id>trackpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>searchPage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>searchAlbum</from-outcome>
            <to-view-id>albumpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>trackpage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>relatedTrack</from-outcome>
            <to-view-id>trackpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>checkout.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>detailTrack</from-outcome>
            <to-view-id>trackpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>checkout.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>detailAlbum</from-outcome>
            <to-view-id>albumpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>reloadindex</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
              </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>detailAlbum</from-outcome>
            <to-view-id>albumpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>trackpage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>detailAlbum</from-outcome>
            <to-view-id>albumpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>albumpage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>detailTrackFromAlbum</from-outcome>
            <to-view-id>trackpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>albumpage.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>relatedAlbumFromAlbum</from-outcome>
            <to-view-id>albumpage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>